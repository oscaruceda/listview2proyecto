<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_protectora"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/imglamadrilena" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="374dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text="Todas las personas que componemos el equipo de La Madrileña procedemos del mundo de la protección animal, en el que hemos trabajado durante muchos años y por el que seguimos luchando todos los días. Cuando vimos por primera vez este albergue, pensamos que todo lo que habíamos hecho hasta el momento por proteger a los animales abandonados, perdería su valor moral si no hacíamos algo por aquellos animales, que vivían sin prácticamente nada, olvidados del mundo y sin esperanza."
        android:textColor="#902af6" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:text="Teléfono 648 495 073"
        android:textColor="#902af6"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:text="Carr. de Carabanchel a Villaverde, km 6.500, 28021 Madrid"
        android:textColor="#902af6"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:text="Fb: La Madrileña Asociación"
        android:textColor="#902af6"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:text=" Web: www.adopcioneslamadrilena.org"
        android:textColor="#902af6"
        android:textSize="18sp" /><![CDATA[@android:color/black" />

    @android:color/black" />

]]>
</LinearLayout>