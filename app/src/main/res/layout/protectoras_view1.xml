<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_protectora"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/imganaa" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="374dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:text="La Asociación Nacional Amigos de los Animales (ANAA) es una entidad sin ánimo de lucro que se fundó en Madrid (España) en 1992, como respuesta al elevado número de animales que son abandonados y maltratados en nuestro país y a la deficiente atención de que son objeto por parte de la administración, que hasta el momento y salvo unas pocas excepciones, se ha limitado a recogerlos y eliminarlos, sin resolver el problema de una manera humanitaria y efectiva."
        android:textColor="#AC4F23" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:text="Teléfono  916 67 20 36"
        android:textColor="#AC4F23"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:text="28150 Valdetorres de Jarama, Madrid"
        android:textColor="#AC4F23"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:text="Fb: ANAA"
        android:textColor="#AC4F23"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:text=" Web: www.anaaweb.org"
        android:textColor="#AC4F23"
        android:textSize="18sp" /><![CDATA[@android:color/black" />

