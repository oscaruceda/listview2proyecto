<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_protectora"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/imgperrikus" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="374dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:text="Somos una asociación protectora de animales, fundada en 2002 y ubicada en la Sierra Norte de Madrid.  Nuestro albergue es pequeño (sin espacio para gatos) y ayudados de las casas de acogida cuidamos de nuestros animales hasta encontrar un nuevo hogar para ellos.  Gracias las donaciones particulares: socios, teaming, mercadillos… podemos hacer frente a todos los gastos que generan nuestros animales, pues no recibimos subvención pública alguna."
        android:textColor="#A985c4" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:text="Teléfono 610 37 63 51"
        android:textColor="#A985c4"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:text="Diseminado Madrid Burgos, 5, 28737 La Serna del Monte, Madrid"
        android:textColor="#A985c4"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:text="Fb: Perrikus Protectora"
        android:textColor="#A985c4"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:text=" Web: www.perrikus.org"
        android:textColor="#A985c4"
        android:textSize="18sp" /><![CDATA[@android:color/black" />

    @android:color/black" />

]]>
</LinearLayout>